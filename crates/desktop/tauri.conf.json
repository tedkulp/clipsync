{
  "productName": "ClipSync",
  "version": "0.1.0",
  "identifier": "com.clipsync.desktop",
  "build": {
    "beforeDevCommand": "sh -c 'cd ../desktop && npm run dev'",
    "beforeBuildCommand": "sh -c 'cd ../desktop && npm run build'",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../../desktop/dist"
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": [],
        "desktopTemplate": "clipsync.desktop"
      },
      "rpm": {
        "desktopTemplate": "clipsync.desktop"
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    }
  },
  "app": {
    "enableGTKAppId": true,
    "windows": [
      {
        "title": "ClipSync",
        "width": 600,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "label": "main"
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  }
}
